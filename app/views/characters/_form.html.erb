<div class="form_field">
  <%= form.label :name %>
  <%= form.text_field :name %>
</div>
<div class="form_field">
  <%= form.label :image, "Image (200x200)" %>
  <%= form.file_field :image %>
</div>
<div class="form_field">
  <%= form.label :race %>
  <%= form.collection_select :race_id, @races, :id, :name, include_blank: true %>
</div>
<div class="form_field">
  <%= form.label :gender %>
  <%= form.collection_select :gender, Character::GENDER, :to_s, :to_s, include_blank: true %>
</div>
<div class="form_field">
  <%= form.label :age %>
  <%= form.text_field :age %>
</div>
<div class="form_field">
  <%= form.label :ethercraft %>
  <%= form.collection_select :ethercraft_id, @ethercrafts, :id, :name, include_blank: true %>
</div>

<div class="birthplace_form_field">
  <%= form.label :birthplace %>
  <%= form.select :birthplace_id, options_for_select(@birthplaces.collect { |country|
    [country.name.titleize, country.id] }, 1), {}, { id: 'countries_select' } %>

  <%= form.label :birth_region %>
  <%= form.select :birth_region, options_for_select(@birth_regions.collect { |region|
    [region.name.titleize, region.id] }, 0), {}, { id: 'regions_select' } %>
</div>
