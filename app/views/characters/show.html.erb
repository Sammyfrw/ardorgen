<div class="character_name">
  <h3><strong><%= @character.name %></strong></h3>
  (<%= link_to "Edit", [:edit, @character] %>)
</div>

<div class="character_image">
  <%= image_tag @character.image.thumb.url %>
</div>

<div class="character_details">
  <ul><strong>
    <li>Race: <%= link_to @character.race.name, @character.race %></li>
    <li>Gender: <%= @character.gender %></li>
    <li>Age: <%= @character.age %></li>
    <li>Ethercraft: <%= link_to @character.ethercraft.name, @character.ethercraft %></li>
    <li>Place of Birth: <%= link_to @character.birth_region.name, @character.birth_region%>,
      <%= link_to @character.birthplace.name, @character.birthplace %></li>
  </strong></ul>
</div>
