<!DOCTYPE html>
<html>
<head>
  <title>Ardorgen</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>

  <script>
    window.ETHERCRAFT = <%= raw @ethercrafts.to_json %>
    window.RACE = <%= raw @races.to_json %>
  </script>

</head>
<body>
<div class="header">
  <div class="site_title">
    <%= link_to "Ardorgen", root_path %>
    <%= link_to "Ethercrafts", ethercrafts_path %>
    <%= link_to "Races", races_path %>
    <%= link_to "Countries", countries_path %>
  </div>
</div>

<div class="yield">
  <%= yield %>
</div>

</body>
</html>
